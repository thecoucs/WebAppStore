@model IEnumerable<WebAppStore.Models.ProductoModel>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Productos</h2>

<p>
    @Html.ActionLink("Agregar Producto", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Peso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stock)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_Creacion)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Nombre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Precio)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Peso)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Stock)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Categoria.Nombre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Fecha_Creacion)
    </td>
    <td>
        @Html.ActionLink("VENDER", "Venta", new { id = item.Id }) |
        @Html.ActionLink("EDITAR", "Edit", new { id = item.Id }) |
        @Html.ActionLink("ELIMINAR", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
